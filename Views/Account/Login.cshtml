@model LoginViewModel

@{
  ViewData["Title"] = "Login";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
  <h2 class="mb-4">Login</h2>
  <form asp-action="Login" method="post">
    <!-- Validation summary here -->
      <div asp-validation-summary="All" class="text-danger"></div> 
   
      <div class="mb-3">
      <label asp-for="Username" class="form-label">Username</label>
      <input asp-for="Username" class="form-control" required>
      <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
      <label asp-for="Password" class="form-label">Password</label>
      <input asp-for="Password" class="form-control" type="password" required>
      <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Login</button>
    <a asp-action="Register" class="btn btn-link">Register</a>
  </form>
</div>

@section scripts {
  <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
  <script src="https://cdn.jsdelivr.net/jquery.validation.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
